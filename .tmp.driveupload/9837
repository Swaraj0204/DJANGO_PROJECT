#include<iostream>
using namespace std;
int main(){
  int n=4;
  //cout<<"enter the value for n:";
  //cin>>n;
  //top left
for(int i=0;i<n;i++){
  for(int j=0;j<i+1;j++){
    cout<<"*";
  }
  //right wing
  
  for(int j=0;j<2*(n-i)-2;j++){
    cout<<" ";
  }
  for(int j=0;j<i+1;j++){
    cout<<"*";
  }
    cout<<endl;
}
//bottom left
for(int i=n;i>0;i--){
for(int j=0;j<i;j++){
cout<<"*";
}
for(int j=0;j<2*(n-i);j++){
  cout<<" ";
}
for(int j=0;j<i;j++){
  cout<<"*";
} 
cout<<endl;
 }
  return 0;
}